{% for item in collections.sections %}
  {% if item.data.type === 'sessions' %}
    <div id="sessions" class="w-full min-h-screen flex flex-col justify-center items-center py-12 space-y-4">
      <div class="self-center text-justify w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="font-bold tracking-wider text-center text-gray-800 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-black text-base space-y-4">
          {{ item.templateContent | safe }}
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}
